<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>parent</artifactId>
        <groupId>com.stratio.explorer</groupId>
        <version>0.4.1-RC3</version>
    </parent>

    <artifactId>dist</artifactId>
    <packaging>pom</packaging>
    <name>Explorer: Packaging distribution</name>




    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <finalName>${project.parent.artifactId}-${project.version}</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                    <attach>false</attach>
                    <descriptors>
                        <descriptor>src/assemble/distribution.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>

            <plugin>
                <!--assembly does all the job here-->
                <artifactId>maven-dependency-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.7</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>

        </plugins>

    </build>

    <profiles>
        <profile>
            <id>package</id>
            <dependencies>
                <dependency>
                    <artifactId>server</artifactId>
                    <groupId>${project.groupId}</groupId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <artifactId>explorer-web</artifactId>
                    <groupId>${project.groupId}</groupId>
                    <version>${project.version}</version>
                    <type>war</type>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-assembly</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.stratio.mojo.unix</groupId>
                        <artifactId>unix-maven-plugin</artifactId>
                        <version>1.1.6</version>
                        <extensions>true</extensions>
                        <inherited>false</inherited>
                        <configuration>
                            <contact>
                                <![CDATA[Stratio Explorer<idiaz@stratio.com>]]>
                            </contact>
                            <contactEmail>idiaz@stratio.com</contactEmail>
                            <deb>
                                <section>devel</section>
                            </deb>
                            <rpm>
                                <group>devel</group>
                                <requires>bash</requires>
                            </rpm>
                            <excludeDirectoryAttributes>
                                <dir>/etc</dir>
                                <dir>/etc/init.d</dir>
                                <dir>/etc/default</dir>
                                <dir>/var</dir>
                                <dir>/opt</dir>
                                <dir>/usr</dir>
                                <dir>/bin</dir>
                            </excludeDirectoryAttributes>
                            <architecture>noarch</architecture>
                            <defaults>
                                <directoryAttributes>
                                    <user>stratio</user>
                                    <group>stratio</group>
                                    <mode>0755</mode>
                                </directoryAttributes>
                                <fileAttributes>
                                    <user>stratio</user>
                                    <group>stratio</group>
                                    <mode>0644</mode>
                                </fileAttributes>
                            </defaults>

                            <outputFileName>stratio-explorer</outputFileName>
                            <assembly>
                                <mkdirs>
                                    <path>/var/log/sds/explorer</path>
                                    <attributes>
                                        <user>stratio</user>
                                        <group>stratio</group>
                                    </attributes>
                                </mkdirs>
                                <mkdirs>
                                    <path>/var/run/sds</path>
                                    <attributes>
                                        <user>stratio</user>
                                        <group>stratio</group>
                                    </attributes>
                                </mkdirs>
                                <copyDirectory>
                                    <from>dist-commons</from>
                                    <to>/etc/default</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/parent-${project.version}/bin</from>
                                    <to>/opt/sds/explorer/bin</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/parent-${project.version}/lib</from>
                                    <to>/opt/sds/explorer/lib</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/parent-${project.version}/conf</from>
                                    <to>/etc/sds/explorer</to>
                                </copyDirectory>
                                <copyDirectory>
                                    <from>target/parent-${project.version}/interpreter</from>
                                    <to>/opt/sds/explorer/interpreter</to>
                                </copyDirectory>
                            </assembly>
                        </configuration>
                        <executions>
                            <execution>
                                <id>deb</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-deb</goal>
                                </goals>
                                <configuration>
                                    <architecture>all</architecture>
                                    <assembly>
                                        <copyFile>
                                            <path>explorer-deb.sh</path>
                                            <toFile>/etc/init.d/explorer</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                                <mode>755</mode>
                                            </attributes>
                                        </copyFile>
                                        <copyFile>
                                            <path>../LICENSE</path>
                                            <toFile>/DEBIAN/StratioExplorerLicense</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                                <mode>755</mode>
                                            </attributes>
                                        </copyFile>
                                    </assembly>
                                </configuration>
                            </execution>
                            <execution>
                                <id>rpm</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>package-rpm</goal>
                                </goals>
                                <configuration>
                                    <architecture>noarch</architecture>
                                    <assembly>
                                        <copyFile>
                                            <path>explorer-rpm.sh</path>
                                            <toFile>/etc/init.d/explorer</toFile>
                                            <attributes>
                                                <user>root</user>
                                                <group>root</group>
                                                <mode>755</mode>
                                            </attributes>
                                        </copyFile>
                                    </assembly>
                                </configuration>
                            </execution>
                        </executions>

                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
